function _init()
	t=0
	c=0
end

function _update60()
	t+=1
end

function _draw()
	cls()
	c += sin(time()*0.001)*10
	c = min(c, 30)
	h=sin(t*0.01)*9.9
	for i=0,128,8 do
		local w=sin((t+i*0.7)*0.01)*4.9
		for p=0,64,12 do
			rect_c(i+p,i-p,c+w,c+w,i)
			rect_c(i-p,i+p,c+w,c+w,i)
		end
	end
end
