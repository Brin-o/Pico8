function add_new_boid()
	add(flock, 
			{
	  pos = {x = 63, y = 63},
			vel = {x = rnd(0.2), y = -0.0001},
			acc = {x = 0, y = 0},
			draw = function(self)
			 circfill(self.pos.x, self.pos.y, 1, 2)
			end,
			update = function(self)
				self.pos.x += self.vel.x
				self.pos.y += self.vel.y
				self.vel.x += self.acc.x
				self.vel.y += self.vel.y
			end
			}
		)
end
