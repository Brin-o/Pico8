function _init()
	t=0
	p_a={224,225,226,227}
	_upd=update_game
	_drw=draw_game
	startgame()
end

function _update()
	t+=1
	_upd()
end

function _draw()
	_drw()
end


function startgame()
	p_x=1 p_y=4
	p_ox=0 p_oy=0 
end


