-- updates

function update_game()
	if btnp(⬅️) then 
	 p_x-=1 
		p_ox=8
		_upd=update_pturn
	end
	if btnp(➡️) then 
	 p_x+=1 
		p_ox=-8
		_upd=update_pturn 
	end
	if btnp(⬆️) then 
	 p_y-=1 
		p_oy=8
		_upd=update_pturn
	end
	if btnp(⬇️) then 
	 p_y+=1
		p_oy=-8
		_upd=update_pturn 
	end
end

function update_pturn()
	p_moving=true
	p_ox=tow(p_ox,0,2)
	p_oy=tow(p_oy,0,2)
	
	if p_ox==0 and p_oy==0 then
		_upd=update_game
	end
end

function update_gameover()
end
