--tools
--returns the current frame from
--a set of animation array
function anim(a)
	local spd=4
	return a[flr((t/spd)%#a+1)]
end

function drawspr(_spr,_x,_y,_c)
	palt(0, false)
	pal(6,_c)
	spr(_spr,_x,_y)
	pal()
end

--moves a towards b at rate
function tow(a,b,r)
	if a+r<b then return a+r end
	if a+r>b then return a-r end
	return b
end

