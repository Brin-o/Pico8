function _init()
	t=0
	p_a={224,225,226,227}
	
	dirx={-1,1,0,0}
	diry={0,0,-1,1}
	startgame()

	_upd=update_game
	_drw=draw_game
end

function _update60()
	t+=1
	_upd()
end

function _draw()
	_drw()
end


function startgame()
	p_x,p_y=1,4 --position
	p_ox,p_oy=0,0 --anim offset
	p_sox,p_soy=0,0 --starting offset 
	p_t=0
	p_flip=false
end


