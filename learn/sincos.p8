__lua__
 cls(7)


for i=0,25,1 do
	pset(rnd(128),rnd(128),rnd(16))
end

function _update()
	if btn(❎) then
		for i=0,10,1 do
			circfill(rnd(128),rnd(128), rnd(5),7) 
		end
	end
end

function _draw()
	for g=0,60,1 do
		local x=rnd(128) 
		local y=rnd(128)
		local c=pget(x,y)
		
		if c!=7 then
			local n_col
			local n_count = 0
			for arc=0,.875,.125 do
				n_col = pget(sin(arc)+x+.5, cos(arc)+y+.5)
				if n_col == c then
					n_count+=1
				end
			end
			if n_count>7 then
				print("░", x - 3, y+rnd(4), c)
			else
				circfill(x,y, 1 + n_count/3, c)
			end
		end
		
	end
	

end
