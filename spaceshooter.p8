function respawn()
	local n = flr(rnd(9))+2
	for i=1,4 do
		local d = -1
		if rnd(1)<0.5 then d=1 end
	 add(enemies, {
	 	sp=17,
	 	m_x=10+i*16,
	 	m_y=i*4-10,
	 	d=d,
	 	x=-32,
	 	y=-32,
	 	r=10,
	 	box = {x1=0, y1=0,
	 								x2=7, x2=7}
	 	})
	end
end
